<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/coinIconLBP"
        android:layout_width="73dp"
        android:layout_height="53dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/dialogBoxLBP"
        app:layout_constraintEnd_toStartOf="@+id/valueLBP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountLBP"
        app:srcCompat="@drawable/lb_lebanon_flag_icon"
        tools:srcCompat="@drawable/lb_lebanon_flag_icon" />

    <TextView
        android:id="@+id/dialogBoxLBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_bold"
        android:minHeight="48dp"
        android:textAllCaps="true"
        android:textColor="#FF5252"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/backgroundActivity2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueLBP" />

    <TextView
        android:id="@+id/dialogBoxUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="97dp"
        android:fontFamily="@font/poppins_bold"
        android:minHeight="48dp"
        android:textAllCaps="true"
        android:textColor="#FF5252"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/converter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueUSD" />

    <TextView
        android:id="@+id/amountLBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Amount in LBP"
        android:textColor="#000000"
        android:textSize="25dip"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/valueLBP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueUSD" />

    <EditText
        android:id="@+id/valueLBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Enter Value"
        android:textSize="20dip"
        app:layout_constraintBottom_toTopOf="@+id/dialogBoxLBP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountLBP" />

    <EditText
        android:id="@+id/valueUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Enter Value"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/amountLBP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountUSD" />

    <TextView
        android:id="@+id/amountUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="106dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Amount in USD"
        android:textColor="#000000"
        android:textSize="25sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/valueUSD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/converter"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#40C4FF"
        android:fontFamily="@font/poppins_bold"
        android:onClick="OnClickConvert"
        android:text="CONVERT"
        android:textSize="18sp"
        app:cornerRadius="30dip"
        app:icon="@drawable/up_and_down_arrows_2"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/amountLBP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogBoxUSD"
        app:layout_constraintVertical_bias="0.181" />

    <ImageView
        android:id="@+id/backgroundActivity2"
        android:layout_width="587dp"
        android:layout_height="262dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:rotationX="-182"
        android:rotationY="-3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogBoxLBP"
        app:srcCompat="@drawable/_7948128_geometric_simple_minimalistic_background_triangles_pattern" />

    <TextView
        android:id="@+id/dialogBoxUniversal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_bold"
        android:minHeight="48dp"
        android:textAllCaps="true"
        android:textColor="#FF5252"
        android:textSize="12sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/backgroundActivity2"
        app:layout_constraintEnd_toEndOf="@id/backgroundActivity2"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogBoxLBP"
        app:layout_constraintVertical_bias="0.705" />

    <ImageView
        android:id="@+id/coinIconUSD"
        android:layout_width="73dp"
        android:layout_height="53dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/dialogBoxUSD"
        app:layout_constraintEnd_toStartOf="@+id/valueUSD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountUSD"
        app:srcCompat="@drawable/us_united_states_flag_icon"
        tools:srcCompat="@drawable/us_united_states_flag_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>